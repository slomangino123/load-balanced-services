@model Shared.ApiResultModel

@{
    ViewData["Title"] = "Api";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Api</h1>

<div>
    <input type="button"
           value="Go Somewhere Else"
           onclick="location.href='@Url.Action("ApiCall", "Home", Model)'" />
</div>

<div>
    <h4>ApiResultModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thumbprint)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thumbprint)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Error)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Error)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exception)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Exception)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result)
        </dt>
        @if (Model?.Result != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.ServiceMessage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.ServiceMessage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.HostName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.HostName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RequestMethod)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RequestMethod)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RequestScheme)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RequestScheme)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RequestUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RequestUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RequestPath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RequestPath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RemoteIp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RemoteIp)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Result.RequestIsWhitelisted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Result.RequestIsWhitelisted)
            </dd>
        }

    </dl>
</div>
<div>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |*@
    <a asp-action="Index">Home</a>
</div>
